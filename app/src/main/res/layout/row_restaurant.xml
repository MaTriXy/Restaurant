<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.031"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/restaurant_name"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/restaurant_type"
        app:layout_constraintStart_toStartOf="@+id/restaurant_type"
        app:layout_constraintTop_toTopOf="@+id/cover_iv"
        tools:text="restaurant name" />

    <ImageView
        android:id="@+id/favorite_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintTop_toTopOf="@+id/cover_iv"
        app:srcCompat="@drawable/ic_star_border_red_45dp" />

    <TextView
        android:id="@+id/restaurant_type"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxWidth="100dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/cover_iv"
        app:layout_constraintStart_toEndOf="@+id/cover_iv"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name"
        tools:text="restaurant type" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxWidth="80dp"
        android:singleLine="true"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_type"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="status" />
</android.support.constraint.ConstraintLayout>